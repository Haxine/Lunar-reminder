<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="gedoor.kunfei.lunarreminder.ReminderEditActivity"
    tools:showIn="@layout/activity_reminder_edit">

    <ImageView
        android:id="@+id/ivwallday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_access_time_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:contentDescription="@string/all_day"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/vwchinesedate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"
        app:layout_constraintLeft_toRightOf="@+id/ivwallday"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/ivwallday"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/ivwrepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_refresh_black_24dp"
        android:contentDescription="@string/repeat"
        tools:ignore="RtlHardcoded"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ivwallday"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivwallday" />

    <TextView
        android:id="@+id/vwrepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:text="@string/repeat"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/ivwrepeat"
        app:layout_constraintTop_toTopOf="@+id/ivwrepeat"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/ivwreminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_notifications_active_black_24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ivwrepeat"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivwrepeat"
        tools:ignore="RtlHardcoded"
        android:contentDescription="@string/reminder" />

    <TextView
        android:id="@+id/tvwreminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reminder"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/ivwreminder"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/ivwreminder"
        android:layout_marginTop="0dp"
        tools:ignore="RtlHardcoded" />


</android.support.constraint.ConstraintLayout>
