<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="gedoor.kunfei.lunarreminder.UI.ReminderEditActivity"
    tools:showIn="@layout/activity_reminder_read">

    <ImageView
        android:id="@+id/ivw_all_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_access_time_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="16dp"
        android:contentDescription="@string/all_day"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/vw_chinese_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"
        app:layout_constraintLeft_toRightOf="@+id/ivw_all_day"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/ivw_all_day"
        android:layout_marginTop="0dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/ivw_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_refresh_black_24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/vw_chinese_date"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivw_all_day"
        android:contentDescription="@string/repeat"
        tools:ignore="RtlHardcoded"/>

    <TextView
        android:id="@+id/vw_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:text="@string/repeat"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/ivw_repeat"
        app:layout_constraintTop_toTopOf="@+id/ivw_repeat"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/ivw_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_notifications_active_black_24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ivw_repeat"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivw_repeat"
        tools:ignore="RtlHardcoded"
        android:contentDescription="@string/reminder" />

    <TextView
        android:id="@+id/tvw_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reminder"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintLeft_toRightOf="@+id/ivw_reminder"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/ivw_reminder"
        android:layout_marginTop="0dp"
        tools:ignore="RtlHardcoded" />


</android.support.constraint.ConstraintLayout>
